{
  "name": "mermaid",
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "tools/plugins/mermaid/src",
  "projectType": "library",
  "tags": [],
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/tools/plugins/mermaid",
        "main": "tools/plugins/mermaid/src/index.ts",
        "tsConfig": "tools/plugins/mermaid/tsconfig.lib.json",
        "assets": [
          "tools/plugins/mermaid/*.md",
          {
            "input": "./tools/plugins/mermaid/src",
            "glob": "**/!(*.ts)",
            "output": "./src"
          },
          {
            "input": "./tools/plugins/mermaid/src",
            "glob": "**/*.d.ts",
            "output": "./src"
          },
          {
            "input": "./tools/plugins/mermaid",
            "glob": "generators.json",
            "output": "."
          },
          {
            "input": "./tools/plugins/mermaid",
            "glob": "executors.json",
            "output": "."
          }
        ]
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "tools/plugins/mermaid/jest.config.ts"
      }
    },
    "generate-mermaid": {
      "executor": "mermaid/generate-mermaid",
      "options": {
        "outputPath": "diagram.md",
        "affected": false
      }
    }
  }
}
